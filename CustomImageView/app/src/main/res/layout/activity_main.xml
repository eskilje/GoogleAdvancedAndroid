<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.eliasskilje.customimageview.DialView
        android:id="@+id/dialView"
        android:layout_width="@dimen/dialViewDimens"
        android:layout_height="@dimen/dialViewDimens"
        app:layout_constraintTop_toBottomOf="@+id/customViewLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dialViewMargin"
        android:layout_marginRight="@dimen/dialViewMargin"
        android:layout_marginTop="@dimen/dialViewMargin"
        app:fanOffColor="@color/gray1"
        app:fanOnColor="@color/cyan1"
        />

    <TextView
        android:id="@+id/customViewLabel"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:padding="@dimen/padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dialViewMargin"
        android:layout_marginStart="@dimen/dialViewMargin"
        android:layout_marginEnd="@dimen/dialViewMargin"
        android:layout_marginRight="@dimen/dialViewMargin"
        android:layout_marginTop="@dimen/marginTop"
        android:text="@string/fan_control"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</android.support.constraint.ConstraintLayout>